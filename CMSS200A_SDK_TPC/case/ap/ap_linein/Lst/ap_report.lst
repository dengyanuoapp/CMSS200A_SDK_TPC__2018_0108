               unsigned char stop_report(void)
               {
                   if(report_stats)
                   {
                       report_stats = FALSE;
                       pSdTtsSendCommand(MC_STOP, TYPE_MP3, NULL);
                       pSdTtsSendCommand(MC_CLOSE, TYPE_MP3, NULL);
                       if(pa_close_flag)
                       {
                           //将PA的音量设置为0，减小关闭PA时产生的噪声。
                           TTSOpenPA(0);
                           delay_report(20);
                           //            DisablePA();
                       }
                       return 0;
                   }
                   return 1;
               }
               
