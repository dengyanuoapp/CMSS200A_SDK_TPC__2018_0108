                ********************************************************************************/
               void report_str_fix(char *str)
               {
                   unsigned char i, j;
               
                   //增加静音数据帧
                   j = strlen(str);
                   //无数据直接返回
                   if(!j)
                   {
                       return;
                   }
                   for(i = j; i > 0; i--)
                   {
                       str[i] = str[i - 1];
                   }
                   str[0] = ' ';
               
                   if(str[j] != ' ')
                   {
                       str[j + 1] = ' ';
                       str[j + 2] = ' ';
C251 COMPILER V4.55,  ap_report                                                            23/05/16  10:41:40  PAGE 7   

                       str[j + 3] = 0;
                   }
                   else
                   {
                       //删除字符串最后多余的空格
                       for(i = j - 2; i > 0; i--)
                       {
                           if(str[i] != ' ')
                               break;
                       }
                       str[i + 3] = 0;
                   }
               }
               
